%html
  %head
    %title BootMagz : Magazine Style Theme built with Bootstrap
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}

    = stylesheet_link_tag "layout/base/bootstrap", "layout/base/bootmagz"

    = javascript_include_tag "libs/jquery/jquery", "twitter/bootstrap", 'libs/jquery/jquery-ujs'
  %body
    .container.main
      .row
        .top-menu
          .span6
            %ul.nav.nav-pills.pull-left

          .span6.socmed-box
            %ul.social_media.pull-right
              %li
                %a.twitter{:href => '#', :title => "Twitter"}
              %li
                %a.facebook{:href => '#', :title => "Facebook"}
              %li
                %a.gplus{:href => '#', :title => "Google Plus"}
              %li
                %a.rss{:href => '#', :title => "RSS"}
      .row
        .span12.header
          .span12.logo
            %a{:href => "index.html"}
            %h1.logo-title Edukownia
            %span.slogan Super zajebisty slogan

      %br

      .row
        .span12
          .navbar
            .navbar-inner
              .container
                %ul.nav
                  %li.active
                    %a{:href => "index.html"} Strona główna
